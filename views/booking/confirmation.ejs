<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Booking Confirmed - UrbanMaid</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <%- include('../partials/navbar', { user: user || null }) %>
  
  <main class="py-5" style="background: linear-gradient(120deg,#e0eefc 0%,#bad1ee 100%) no-repeat fixed; min-height:100vh;">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
      <div class="card shadow border-0 mx-auto w-100" style="max-width:480px; border-radius:22px;">
        <div class="card-body px-4 py-4 text-center">
          <!-- Success Header -->
          <div class="mb-4">
            <div class="text-success mb-2" style="font-size:3em;">
              <i class="fas fa-check-circle"></i>
            </div>
            <h1 class="fw-bold mb-2" style="color:#1d5a2e;">Booking Confirmed!</h1>
            <p class="text-muted mb-0">Thank you! Your booking has been placed successfully.</p>
          </div>

          <!-- Helper Information (Safe Check) -->
          <% if (typeof helper !== 'undefined' && helper) { %>
          <div class="d-flex flex-column align-items-center mb-4">
            <img src="<%= helper.imageURL || '/images/default-user.png' %>" 
                 alt="<%= helper.name || 'Helper' %>" 
                 class="rounded-circle shadow mb-3" 
                 style="width:120px;height:120px;object-fit:cover;object-position:center;border:3px solid #e8f5e8;">
            
            <div class="fw-bold mb-1" style="font-size:1.2em;color:#205081;">
              <%= helper.name || 'Service Provider' %>
            </div>
            
            <% if (helper.category || helper.hourlyRate) { %>
            <div class="text-secondary mb-2" style="font-size:1em;">
              <% if (helper.category) { %><%= helper.category %><% } %>
              <% if (helper.category && helper.hourlyRate) { %> • <% } %>
              <% if (helper.hourlyRate) { %>₹<%= helper.hourlyRate %>/hour<% } %>
            </div>
            <% } %>
            
            <% if (helper.location && (helper.location.area || helper.location.city)) { %>
            <div class="text-secondary small">
              <i class="fas fa-map-marker-alt me-1"></i>
              <% if (helper.location.area) { %><%= helper.location.area %><% } %>
              <% if (helper.location.area && helper.location.city) { %>, <% } %>
              <% if (helper.location.city) { %><%= helper.location.city %><% } %>
            </div>
            <% } %>
          </div>
          <% } %>

          <!-- Booking Details (Safe Check) -->
          <% if (typeof booking !== 'undefined' && booking) { %>
          <div class="bg-light rounded-3 shadow-sm p-3 mb-4 w-100 text-start">
            <div class="fw-bold mb-3 text-center" style="font-size:1.1em;color:#205081;">
              <i class="fas fa-calendar-check me-2"></i>Booking Details
            </div>
            
            <div class="row g-2">
              <% if (booking.bookingDate) { %>
              <div class="col-sm-6">
                <small class="fw-semibold text-secondary d-block">Date:</small>
                <span class="fw-medium"><%= booking.bookingDate %></span>
              </div>
              <% } %>
              
              <% if (booking.startTime) { %>
              <div class="col-sm-6">
                <small class="fw-semibold text-secondary d-block">Start Time:</small>
                <span class="fw-medium"><%= booking.startTime %></span>
              </div>
              <% } %>
              
              <% if (booking.duration) { %>
              <div class="col-12">
                <small class="fw-semibold text-secondary d-block">Duration:</small>
                <span class="fw-medium"><%= booking.duration %> hour<%= booking.duration > 1 ? 's' : '' %></span>
              </div>
              <% } %>
              
              <!-- Address with Safe Checking -->
              <div class="col-12">
                <small class="fw-semibold text-secondary d-block">Service Address:</small>
                <span class="fw-medium">
                  <% 
                  let addressParts = [];
                  if (booking.address) {
                    if (booking.address.street) addressParts.push(booking.address.street);
                    if (booking.address.area && booking.address.area !== 'Not provided') addressParts.push(booking.address.area);
                    if (booking.address.city && booking.address.city !== 'Not provided') addressParts.push(booking.address.city);
                    if (booking.address.pincode && booking.address.pincode !== 'Not provided') addressParts.push(booking.address.pincode);
                  }
                  %>
                  <%= addressParts.length > 0 ? addressParts.join(', ') : 'Address not provided' %>
                </span>
              </div>
              
              <% if (booking.specialInstructions) { %>
              <div class="col-12">
                <small class="fw-semibold text-secondary d-block">Special Instructions:</small>
                <span class="fw-medium"><%= booking.specialInstructions %></span>
              </div>
              <% } %>
              
              <% if (booking.totalAmount) { %>
              <div class="col-12 mt-2 pt-2 border-top">
                <small class="fw-semibold text-secondary d-block">Total Amount:</small>
                <span class="fw-bold text-success" style="font-size:1.2em;">₹<%= booking.totalAmount %></span>
              </div>
              <% } %>
            </div>
          </div>
          <% } else { %>
          <!-- Fallback if no booking data -->
          <div class="bg-light rounded-3 p-3 mb-4">
            <p class="text-muted mb-0">Booking details will be sent to your email shortly.</p>
          </div>
          <% } %>

          <!-- Action Buttons -->
          <div class="d-flex flex-column gap-2">
            <a href="/category" class="btn btn-success btn-lg fw-bold py-2" style="border-radius:12px;">
              <i class="fas fa-plus me-2"></i>Book Another Service
            </a>
            
            <a href="/booking/my-bookings" class="btn btn-outline-primary fw-semibold" style="border-radius:12px;">
              <i class="fas fa-list me-2"></i>View My Bookings
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <!-- Footer (optional) -->
  <%- include('../partials/footer') %>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

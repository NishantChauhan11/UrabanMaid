<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap only (FontAwesome removed) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Your custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/login.css">
</head>
<body style="background: linear-gradient(120deg, #e0eefc 0%, #bad1ee 100%) no-repeat fixed; min-height: 100vh;">
  <!-- Navbar -->
  <%- include('../partials/navbar', { user: user }) %>

  <!-- Login Form Container -->
  <div class="container d-flex align-items-center justify-content-center" style="min-height: calc(100vh - 80px);">
    <div class="row w-100 justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0" style="border-radius: 15px;">
          <div class="card-body p-5">
            
            <!-- Header -->
            <div class="text-center mb-4">
              <div class="mb-3" style="font-size: 3rem;">ðŸ‘¤</div>
              <h3 class="mb-2 fw-bold" style="color: #1186f7;">
                Welcome Back
              </h3>
              <p class="text-muted mb-0">Sign in to your UrbanMaid account</p>
            </div>

            <!-- Login Form -->
            <form action="/auth/login" method="POST" autocomplete="off">
              
              <!-- Email Field -->
              <div class="mb-3">
                <label for="email" class="form-label fw-semibold">
                  Email Address
                </label>
                <div class="input-group">
                  <input type="email" 
                         class="form-control border-start-0 ps-0" 
                         id="email" 
                         name="email" 
                         required 
                         placeholder="Enter your email address"
                         style="box-shadow: none;">
                </div>
              </div>

              <!-- Password Field -->
              <div class="mb-4">
                <label for="password" class="form-label fw-semibold">
                  Password
                </label>
                <div class="input-group">
                  <input type="password" 
                         class="form-control border-start-0 ps-0" 
                         id="password" 
                         name="password" 
                         required 
                         placeholder="Enter your password"
                         style="box-shadow: none;">
                </div>
              </div>

              <!-- Remember Me & Forgot Password -->
              <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                  <label class="form-check-label text-sm" for="rememberMe">
                    Remember me
                  </label>
                </div>
                <a href="#" class="text-decoration-none small" style="color: #1186f7;">
                  Forgot Password?
                </a>
              </div>

              <!-- Login Button -->
              <button type="submit" class="btn w-100 fw-bold py-3 mb-3" 
                      style="background: linear-gradient(45deg, #1186f7, #1e40af); border: none; border-radius: 10px;">
                Sign In
              </button>

              <!-- Divider -->
              <div class="text-center mb-3">
                <hr class="my-3">
                <span class="text-muted small bg-white px-3">Don't have an account?</span>
              </div>

              <!-- Register Button -->
              <a class="btn btn-outline-primary w-100 py-2 fw-semibold" 
                 href="/auth/register"
                 style="border-radius: 10px; border-width: 2px;">
                Create New Account
              </a>
            </form>

            <!-- Footer -->
            <div class="text-center mt-4">
              <small class="text-muted">
                By signing in, you agree to our 
                <a href="#" class="text-decoration-none">Terms of Service</a> and 
                <a href="#" class="text-decoration-none">Privacy Policy</a>
              </small>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle (REQUIRED for navbar dropdown and alerts) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Custom JS for form validation (optional) -->
  <script>
    // Add some interactive feedback
    document.getElementById('email').addEventListener('focus', function() {
      this.parentElement.style.borderColor = '#1186f7';
    });
    document.getElementById('password').addEventListener('focus', function() {
      this.parentElement.style.borderColor = '#1186f7';
    });
    document.getElementById('email').addEventListener('blur', function() {
      this.parentElement.style.borderColor = '#dee2e6';
    });
    document.getElementById('password').addEventListener('blur', function() {
      this.parentElement.style.borderColor = '#dee2e6';
    });
  </script>
</body>
</html>
